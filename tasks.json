{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run_Task",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g"
                "src/main.cpp",
                "-o",
                "src/${workspaceFolderBasename}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
